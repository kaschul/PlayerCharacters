{
  "name": "PlayerCharacters",
  "version": "1.0.0",
  "description": "A list of my D&D characters and NPCs",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\" ",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaschul/PlayerCharacters.git"
  },
  "author": "Katherine Schuljak",
  "bugs": {
    "url": "https://github.com/kaschul/PlayerCharacters/issues"
  },
  "homepage": "https://github.com/kaschul/PlayerCharacters#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "mongoose": "^6.2.10",
    "react-html-parser": "^2.0.2"
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "nodemon": "^2.0.15"
  }
}
